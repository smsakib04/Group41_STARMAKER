<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="649.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="groupfortyone.group41_starmaker.Samanta.FollowersDashboardController">
   <children>
      <Label layoutX="166.0" layoutY="7.0" text="Followers Dashboard">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
      <Button layoutX="464.0" layoutY="168.0" mnemonicParsing="false" onAction="#messageFollowerOA" text="Message" />
      <Button layoutX="460.0" layoutY="133.0" mnemonicParsing="false" onAction="#followOA" text="Follow" />

      <!-- TableView for Followers -->
      <TableView fx:id="followersTable" layoutX="122.0" layoutY="43.0" prefHeight="250.0" prefWidth="332.0">
         <columns>

            <TableColumn fx:id="followerNameTC" prefWidth="182.0" text="Follower Name" />


            <TableColumn fx:id="followerIDTC" prefWidth="149.0" text="Follower ID" />
         </columns>
      </TableView>

      <Button layoutX="531.0" layoutY="551.0" mnemonicParsing="false" onAction="#previousOA" text="Previous" />
      <Button layoutX="463.0" layoutY="98.0" mnemonicParsing="false" onAction="#blockFollowerOA" text="Block" />
