         <columns>
            <TableColumn fx:id="followingFollowerNameTC" prefWidth="182.0" text="Follower Name" />
            <TableColumn fx:id="followingFollowerIDTC" prefWidth="149.0" text="Follower ID" />
         </columns>
      </TableView>
      <Label layoutX="228.0" layoutY="318.0" text="Following:">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>