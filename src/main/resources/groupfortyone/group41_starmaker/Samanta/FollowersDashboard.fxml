<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="groupfortyone.group41_starmaker.Samanta.FollowersDashboardController">
   <children>
      <Label layoutX="178.0" layoutY="14.0" text="Followers Dashboard">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
      <Button layoutX="512.0" layoutY="187.0" mnemonicParsing="false" onAction="#messageFollowerOA" text="Message" />
      <Button layoutX="512.0" layoutY="155.0" mnemonicParsing="false" onAction="#followOA" text="Follow" />

      <!-- TableView for Followers -->
      <TableView fx:id="followersTable" layoutX="41.0" layoutY="93.0" prefHeight="250.0" prefWidth="432.0">
         <columns>

            <TableColumn fx:id="followerNameTC" prefWidth="182.0" text="Follower Name" />


            <TableColumn fx:id="followerIDTC" prefWidth="91.0" text="Follower ID" />


            <TableColumn fx:id="blockButtonTC" prefWidth="158.0" text="Block" />
         </columns>
      </TableView>

      <Button layoutX="526.0" layoutY="353.0" mnemonicParsing="false" onAction="#previousOA" text="Previous" />
   </children>
</AnchorPane>
